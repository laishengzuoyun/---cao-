<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.delta.mapper.GoodsPriceMapper">

    <select id="searchByName" resultType="com.example.delta.entity.GoodsPrice">
        SELECT * FROM goods_price
        WHERE goods_name LIKE CONCAT('%', #{name}, '%')
        ORDER BY price DESC
    </select>

</mapper>